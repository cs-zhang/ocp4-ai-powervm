apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  name: '99-{{ role_n }}-storage-encryption'
  labels:
    machineconfiguration.openshift.io/role: '{{ role_n }}'
spec:
  config:
    ignition:
      version: 3.2.0
    storage:
      luks:
        - name: root
          device: /dev/disk/by-partlabel/root
          clevis:
            tang:
{% for item in tang  %}
{% if item.thumbprint is not none and item.url is not none %}
              - thumbprint: {{ item.thumbprint}}
                url: {{ item.url }}
{% endif %}
{% endfor %}
            threshold: 1
          options: [--cipher, aes-cbc-essiv:sha256]
          wipeVolume: true
      filesystems:
        - device: /dev/mapper/root
          format: xfs
          wipeFilesystem: true
          label: root
  kernelArguments:
    - rd.neednet=1

